@{
    int? UID = Context.Session.GetInt32("UserId");
}

@model Message

<div class="">
    <h1 class="display-6">Post a Message</h1>
    <form asp-action="CreateMessage" asp-controller="Message" method="post">
        <div class="mb-3">
            <span style="font-weight: 600;" asp-validation-for="MessageText" class="text-danger d-block "></span>
            <input style="height:3rem" asp-for="MessageText" class="form-control" placeholder="Whats on your mind?">
        </div>
        <div class="d-flex justify-content-between">
            <p>
                @{
                    if (UID == null)
                    {
                        <small>You must be logged in to post a message.</small>
                    }
                }
            </p>
            <button type="submit" class="btn btn-outline-success w-25" @(UID == null ? "disabled" : "")>Message</button>
        </div>
    </form>
</div>


