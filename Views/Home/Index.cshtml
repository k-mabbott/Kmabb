@{
    ViewData["Title"] = "Home Page";
}

@model Quote

<div class="bg-black">

    <!-- Banner / Carousel -->
    <div id="banner" class="carousel slide h-50 mt-5 pt-2 bg-black" data-bs-ride="carousel">
        <!-- Slide indicator -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#banner" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#banner" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#banner" data-bs-slide-to="2"></button>
            <button type="button" data-bs-target="#banner" data-bs-slide-to="3"></button>
        </div>
        <!-- Images -->
        <div class="carousel-inner fade-in">
            <div class="carousel-item position-relative active ">
                <img id="c-img" src="/images/Guesthouse.jpg" alt="banner-images" class="d-block w-100">
            </div>
            <div class="carousel-item position-relative">
                <img src="/images/master.jpg" alt="banner-images" class="d-block w-100">
            </div>
            <div class="carousel-item position-relative">
                <img src="/images/otherMaster.jpg" alt="banner-images" class="d-block w-100">
            </div>
            <div class="carousel-item position-relative">
                <img src="/images/living.jpg" alt="banner-images" class="d-block w-100">
            </div>
        </div>
        <!-- Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#banner" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#banner" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
    <div class="w-100 text-center fade-in bg-black p-5">
        <h1 class="display-4 my-5 text-white">Welcome to Kmabb Construction!</h1>
        <a asp-controller="Message" asp-action="Index" class="text-white text-decoration-none ">
            <h4>Please login and visit the message board for questions</h4>
        </a>
    </div>
    <div class="bg-black w-100 background p-5">
        <div class="container mx-auto d-flex justify-content-between text-center overflow-hidden row gy-3">
            <!-- About us -->
            <section class="d-block col-12 col-sm-5 text-white text-card-l">
                <div class="animate bg-dark rounded-3 p-3 h-100">
                    <h3 class="animate border-bottom pb-2">About Us</h3>
                    <h5 class="animate">
                        Kmabb Construction is a small general contracting business established in 2020. Owned and operated
                        by Kyle in Kitsap County Washington. We are proudly serving the Kitsap County area of Washington fully licensed and insured providing products the clients are completely satisfied with.
                    </h5>
                </div>
            </section>
            <div class="col-1"></div>
            <!-- Scope of work -->
            <section class="d-block col-12 col-sm-6 text-white text-card-r">
                <div class="animate bg-dark rounded-3 p-3 h-100">
                    <h3 class="animate border-bottom pb-2">Scope of work includes</h3>
                    <ul class="animate text-start">
                        <li>Custom woodworking</li>
                        <li>Custom metalworking</li>
                        <li>Cabinetry</li>
                        <li>Framing</li>
                        <li>Flooring</li>
                        <li>Tiling</li>
                        <li>Much more..</li>
                    </ul>
                </div>
            </section>
        </div>
    </div>
    <section class="bg-black scroll-fade zoom pt-5 position-relative">
        <img src="/images/bridge.jpg" alt="bridge" class="w-100 mx-auto animate" width="100">
        <section
            class="d-block text-white zoom container text-center overflow-hidden position-absolute top-50 translate-middle start-50 opacity-75">
            <h1 class="animate bg-dark p-3 h-100 m-5">
                Residential and Light Commercial Work
            </h1>
        </section>
    </section>
    <!-- Photo Gallery -->
    <h1 class="text-white text-center w-100 p-5">Quality and Service you can depend on</h1>
    <div class="row">
        <div class="col-sm-6 text-white mb-3 mb-sm-0">
            <div class="bg-dark rounded-3 m-3 text-center">
                <div class="card-body">
                    <h4 class="card-title border-bottom pb-2">Photo Gallery</h4>
                    <p class="card-text">We have pictures of previous projects we have completed show cased our quality crafstmanship.</p>
                    <a asp-controller="Home" asp-action="PhotoGallery" class="btn btn-outline-primary">Projects</a>
                </div>
            </div>
        </div>
        <!-- Message Board -->
        <div class="col-sm-6 text-white mb-5">
            <div class="bg-dark rounded-3 m-3 text-center">
                <div class="card-body">
                    <h4 class="card-title border-bottom pb-2">On-Site Message Board</h4>
                    <p class="card-text">Dont want to send an email? We have an on page message board where you can ask questions or leave us feedback!</p>
                    <a asp-controller="Message" asp-action="Index" class="btn btn-outline-primary">Message Board</a>
                </div>
            </div>
        </div>
    </div>
    <h1 class="text-center text-white border-bottom w-75 mx-auto pb-2 mb-3" >Request a quote</h3>
    <form asp-action="CreateQuote" asp-controller="Home" class="text-white text-center" method="post">
        <div class="row">
            <div class="mb-3 col-12 col-sm-6">
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger d-block"></span>
                <input asp-for="Name" class="form-control w-75 mx-auto bg-dark text-white" placeholder="Your Name" >
            </div>
            <div class="mb-3 col-12 col-sm-6">
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger d-block"></span>
                <input asp-for="Email" class="form-control w-75 mx-auto bg-dark text-white" placeholder="Your Email" >
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-12 col-sm-6">
                <label asp-for="Phone"></label>
                <span asp-validation-for="Phone" class="text-danger d-block"></span>
                <input asp-for="Phone" type="tel" class="form-control w-75 mx-auto bg-dark text-white" placeholder="Your Phone Number" >
            </div>
            <div class="mb-3 col-12 col-sm-6">
                <label asp-for="City"></label>
                <span asp-validation-for="City" class="text-danger d-block"></span>
                <input asp-for="City" class="form-control w-75 mx-auto bg-dark text-white" placeholder="City or Town you are located in" >
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="Message"></label>
            <span asp-validation-for="Message" class="text-danger d-block"></span>
            <textarea asp-for="Message" class="form-control w-75 mx-auto bg-dark text-white" id="Message" rows="4" placeholder="Brief description of your project"></textarea>
        </div>
        <button class=" m-3 w-50 btn btn-outline-success" >Send Quote Request</button>
    </form>
    <div style="height: 115px;" class="w-100">

    </div>
</div>